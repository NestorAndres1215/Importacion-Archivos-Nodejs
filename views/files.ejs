<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lista de Archivos</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600&display=swap" rel="stylesheet">
<link rel="stylesheet" href="/css/files.css">
</head>

<body>
    <div class="container">
        <h1>Lista de Archivos</h1>

        <div class="search-container">
            <input type="text" placeholder="Buscar archivo..." class="search-input" id="searchInput">
            <button class="search-btn">
                <i class="fas fa-search"></i>
            </button>
        </div>

        <div class="table-container">
            <table>
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Nombre</th>
                        <th>Tipo</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody id="filesTableBody">
                    <% if (files && files.length> 0) { %>
                        <% files.forEach(file=> { %>
                            <tr>
                                <td>
                                    <%= file.id %>
                                </td>
                                <td class="file-name">
                                    <% let iconClass="fas fa-file" ; %>
                                        <% let badgeClass="file-badge" ; %>

                                            <% if (file.type.includes('pdf')) { %>
                                                <% iconClass +=" pdf" ; badgeClass +=" pdf" ; %>
                                                    <i class="fas fa-file-pdf file-icon pdf"></i>
                                                    <% } else if (file.type.includes('doc')) { %>
                                                        <% iconClass +=" doc" ; badgeClass +=" doc" ; %>
                                                            <i class="fas fa-file-word file-icon doc"></i>
                                                            <% } else if (file.type.includes('image')) { %>
                                                                <% iconClass +=" img" ; badgeClass +=" img" ; %>
                                                                    <i class="fas fa-file-image file-icon img"></i>
                                                                    <% } else if (file.type.includes('zip')) { %>
                                                                        <% iconClass +=" zip" ; badgeClass +=" zip" ; %>
                                                                            <i
                                                                                class="fas fa-file-archive file-icon zip"></i>
                                                                            <% } else if (file.type.includes('text')) {
                                                                                %>
                                                                                <% iconClass +=" txt" ; badgeClass
                                                                                    +=" txt" ; %>
                                                                                    <i
                                                                                        class="fas fa-file-alt file-icon txt"></i>
                                                                                    <% } else { %>
                                                                                        <i
                                                                                            class="fas fa-file file-icon"></i>
                                                                                        <% } %>

                                                                                            <%= file.name %>
                                </td>
                                <td>
                                    <% let type=file.type.split('/')[1]; %>
                                        <% if (type) { %>
                                            <span class="<%= badgeClass %>">
                                                <%= type %>
                                            </span>
                                            <% } else { %>
                                                <%= file.type %>
                                                    <% } %>
                                </td>
                                <td class="action-buttons">
                                    <a href="/files/<%= file.id %>" class="btn">
                                        <i class="fas fa-download"></i> Descargar
                                    </a>

                                </td>
                            </tr>
                            <% }) %>
                                <% } else { %>
                                    <tr>
                                        <td colspan="4">
                                            <div class="empty-state">
                                                <i class="fas fa-folder-open"></i>
                                                <p>No hay archivos disponibles</p>
                                                <a href="/upload" class="btn">
                                                    <i class="fas fa-upload"></i> Subir Archivo
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                    <% } %>
                </tbody>
            </table>
        </div>

        <a href="/" class="back-btn">
            <i class="fas fa-arrow-left"></i> Volver al inicio
        </a>
    </div>
    <script src="/js/files.js">

    </script>
</body>

</html>